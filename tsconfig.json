{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "es2022",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@components/*": ["./components/*"],
      "@screens/*": ["./screens/*"],
      "@utilities/*": ["./utilities/*"],
      "@hooks/*": ["./hooks/*"],
      "@atoms/*": ["./atoms/*"],
      "@services/*": ["./services/*"],
      "@assets/*": ["./assets/*"],
      "@hocs/*": ["./hocs/*"],
      "@api/*": ["./api/*"],
      "@constants/*": ["./constants/*"],
    }
  }
}
